<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_bold"
            android:onClick="onStyleClicked"
            android:src="@drawable/pallet_normal"
            android:tag="bold" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_italic"
            android:onClick="onStyleClicked"
            android:src="@drawable/pallet_normal"
            android:tag="italic" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_underline"
            android:onClick="onStyleClicked"
            android:src="@drawable/pallet_normal"
            android:tag="underline" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_strikethrough"
            android:onClick="onStyleClicked"
            android:src="@drawable/pallet_normal"
            android:tag="strikethrough" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>